%main
  %h1 Catspam

  %form.toolbar
    %label Твоя почта:
    %input{type: 'email', name: 'email', value: @current_user.email, disabled: true, class: 'dynamic-width'}
    %input{id: 'activation', type: 'checkbox', name: 'active', checked: @current_user.active?}
    %label{for: 'activation'}= @current_user.active? ? 'Отписаться' : 'Подписаться'
    %br
    %label Твой ник:
    %input{type: 'text', name: 'name', value: @current_user.name, class: 'dynamic-width'}
    %input{type: 'submit', value: 'Поменять'}
    %br
    = link_to('--> Позвать друга <--', root_url)

  .blocks
    .block
      - @solo_posts.sort_by(&:created_at).reverse!.each do |post|
        .bar
          %label.circle{style: "background-color: #{darkness_to_color(post.image.darkness)};"}
          = link_to(translate_time(post.created_at), post, style: "background-image: url(#{post.image.url})")

    - @reports.sort_by(&:created_at).reverse!.each do |report|
      .block
        .bar
          %label.circle
          = link_to(translate_time(report.created_at), report)
        .line
        - report.posts.sort_by(&:created_at).reverse!.each do |post|
          .bar
            %label.circle{style: "background-color: #{darkness_to_color(post.image.darkness)};"}
            = link_to(translate_time(post.created_at), post, style: "background-image: url(#{post.image.url})")
